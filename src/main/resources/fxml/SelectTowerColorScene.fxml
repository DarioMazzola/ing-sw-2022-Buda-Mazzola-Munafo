<StackPane prefHeight="1080.0" prefWidth="1920.0" stylesheets="/css/dropShadowEffect.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane style="-fx-background-color: LIGHTSKYBLUE;">
         <ImageView fx:id="grayImg" disable="true" fitHeight="330.0" fitWidth="337.0" layoutX="534.0" layoutY="419.0" opacity="0.05" pickOnBounds="true" preserveRatio="true" x="-150.0" y="-150.0">
            <Image url="@../images/towers/gray_tower.png" />
         </ImageView>
         <ImageView fx:id="blackImg" disable="true" fitHeight="300.0" fitWidth="300.0" layoutX="1399.0" layoutY="433.0" opacity="0.5" pickOnBounds="true" preserveRatio="true" x="-150.0" y="-150.0">
            <Image url="@../images/towers/black_tower.png" />
         </ImageView>
         <ImageView fx:id="whiteImg" disable="true" fitHeight="300.0" fitWidth="300.0" layoutX="960.0" layoutY="435.0" opacity="0.5" pickOnBounds="true" preserveRatio="true" x="-150.0" y="-150.0">
            <Image url="@../images/towers/white_tower.png" />
         </ImageView>
         <RadioButton fx:id="grayButton" disable="true" layoutX="461.0" layoutY="622.0" mnemonicParsing="false" opacity="0.0" prefHeight="0.0" prefWidth="88.0" text="gray">
            <toggleGroup>
               <ToggleGroup fx:id="towersButton" />
            </toggleGroup>
         </RadioButton>
         <Button fx:id="selectButton" disable="true" layoutX="885.0" layoutY="680.0" mnemonicParsing="false" prefHeight="84.0" prefWidth="150.0" text="Select">
            <font>
               <Font name="Baskerville Old Face" size="36.0" />
            </font>
         </Button>
         <RadioButton fx:id="whiteButton" disable="true" layoutX="932.0" layoutY="651.0" mnemonicParsing="false" opacity="0.0" prefHeight="0.0" prefWidth="88.0" text="white" toggleGroup="$towersButton" />
         <RadioButton fx:id="blackButton" disable="true" layoutX="1425.0" layoutY="636.0" mnemonicParsing="false" opacity="0.0" prefHeight="0.0" prefWidth="88.0" text="black" toggleGroup="$towersButton" />
         <Label layoutX="776.0" layoutY="86.0" text="TOWER COLOR">
            <font>
               <Font name="Baskerville Old Face" size="50.0" />
            </font>
         </Label>
         <Label layoutX="607.0" layoutY="177.0" text="Select the color of the towers in your dashboard!">
            <font>
               <Font name="Baskerville Old Face" size="36.0" />
            </font>
         </Label>
      </AnchorPane>
   </children>
</StackPane>
