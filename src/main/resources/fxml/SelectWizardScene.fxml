<StackPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #ADD8E6;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.scenes.SelectWizardSceneController">
   <children>
      <AnchorPane style="-fx-background-color: #ADD8E6#ADD8E6;">
         <children>
            <HBox layoutX="269.0" layoutY="288.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="firstWizardImage" fitHeight="433.0" fitWidth="532.0" onMouseClicked="#secondClicked" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/wizards/fisrt.png" />
                     </image>
                     <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </HBox.margin>
                  </ImageView>
                  <ImageView fx:id="secondWizardImage" fitHeight="433.0" fitWidth="532.0" onMouseClicked="#firstClicked" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/wizards/second.png" />
                     </image>
                     <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </HBox.margin>
                  </ImageView>
                  <ImageView fx:id="thirdWizardImage" fitHeight="433.0" fitWidth="532.0" onMouseClicked="#thirdClicked" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/wizards/third.png" />
                     </image>
                     <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </HBox.margin>
                  </ImageView>
                  <ImageView fx:id="fourthWizardImage" fitHeight="433.0" fitWidth="532.0" onMouseClicked="#fourthClicked" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/wizards/fourth.png" />
                     </image>
                     <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
            <Label layoutX="591.0" layoutY="164.0" text="Now select your Wizard for this game!">
               <font>
                  <Font name="Baskerville" size="48.0" />
               </font>
            </Label>
            <RadioButton fx:id="secondWizard" layoutX="271.0" layoutY="772.0" mnemonicParsing="false" text="SECOND" visible="false">
               <toggleGroup>
                  <ToggleGroup fx:id="wizards" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="firstWizard" layoutX="623.0" layoutY="772.0" mnemonicParsing="false" text="FIRST" toggleGroup="$wizards" visible="false" />
            <RadioButton fx:id="thirdWizard" layoutX="961.0" layoutY="772.0" mnemonicParsing="false" text="THIRD" toggleGroup="$wizards" visible="false" />
            <RadioButton fx:id="fourthWizard" layoutX="1314.0" layoutY="772.0" mnemonicParsing="false" text="FOURTH" toggleGroup="$wizards" visible="false" />
            <Button fx:id="selectButton" layoutX="899.0" layoutY="803.0" mnemonicParsing="false" onAction="#onSelect" text="Select">
               <font>
                  <Font name="Baskerville" size="24.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</StackPane>
